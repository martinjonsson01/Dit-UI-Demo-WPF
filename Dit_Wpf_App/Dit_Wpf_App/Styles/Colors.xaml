<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Dit_Wpf_App">

    <Color x:Key="BackgroundLight">#fafafa</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}" />

    <Color x:Key="Accent">#1de9b6</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />

    <Color x:Key="MainDark">#1976d2</Color>
    <SolidColorBrush x:Key="MainDarkBrush" Color="{StaticResource MainDark}" />

    <Color x:Key="Main">#1e88e5</Color>
    <SolidColorBrush x:Key="MainBrush" Color="{StaticResource Main}" />

    <Color x:Key="MainLight">#42a5f5</Color>
    <SolidColorBrush x:Key="MainLightBrush" Color="{StaticResource MainLight}" />

    <Color x:Key="Gray">#585858</Color>
    <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}" />

    <Color x:Key="DarkGray">#404040</Color>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}" />

    <Color x:Key="Link">#5893f5</Color>
    <SolidColorBrush x:Key="LinkBrush" Color="{StaticResource Link}" />

</ResourceDictionary>