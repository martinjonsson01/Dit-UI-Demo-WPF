<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Dit_Wpf_App">
    
    <!-- Disable-able textblock. -->
    <Style x:Key="DisableTextBlock" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Roboto" />
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5" />
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <!-- Location input Label -->
    <Style x:Key="LocationInputLabel" TargetType="Label">
        <Setter Property="Background" Value="{StaticResource MainLightBrush}" />
        <Setter Property="Width" Value="220" />
        <Setter Property="Height" Value="33" />
        <Setter Property="FontFamily" Value="Roboto" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Padding" Value="5, 0, 0, 0" />
    </Style>
    
</ResourceDictionary>