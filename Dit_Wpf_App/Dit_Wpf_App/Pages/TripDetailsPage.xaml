                           FontFamily="Roboto"
                           FontSize="14"
                           Foreground="{StaticResource GrayBrush}"
                           Padding="3"
                           Margin="4, 0, 0, 0"/>

                </StackPanel>

            </StackPanel>

            <!-- Right content -->
            <Grid HorizontalAlignment="Right">

