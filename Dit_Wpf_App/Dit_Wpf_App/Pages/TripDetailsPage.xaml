                           Stretch="UniformToFill"
                           Opacity="0.7"
                           Width="23"
                           Height="23"
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Margin="16, 0, 0, 0"/>

                    <!-- Walk text -->
