                                BorderThickness="1"
                                CornerRadius="0"
                                Height="18">
                            <Label Content="27"
                                   Padding="6, 0, 6, 0"
                                   FontFamily="Roboto"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   HorizontalContentAlignment="Center"/>
